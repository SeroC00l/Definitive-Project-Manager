---
import Button, { ButtonVariants } from "./Button.astro";
import X from "@/assets/icons/x.svg";
const { title, class: className, ...props } = Astro.props;
---

<dialog
  {...props}
  title={title}
  class:list={["open:flex flex-col m-auto p-4 rounded shadow-lg bg-background text-foreground min-w-[450px]", className]}
>
  <header class="flex justify-between items-center">
    <h2 class="text-2xl font-bold">{title}</h2>
    <Button
      variant={ButtonVariants.Ghost}
      class="ml-auto"
      onclick="this.closest('dialog').close()"
    >
      <X class="size-4" />
    </Button>
  </header>
  <slot />
</dialog>
